rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Trees collection rules
    match /trees/{treeId} {
      // Anyone can read trees
      allow read: if true;

      // Only authenticated users can create trees
      // and they must set their own userId
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.keys().hasAll(['userId', 'name', 'fruitType', 'position', 'imageUrl', 'createdAt', 'upvotes', 'downvotes'])
                    && request.resource.data.upvotes is list
                    && request.resource.data.downvotes is list;

      // Only authenticated users can update trees (for voting)
      allow update: if isAuthenticated();

      // Only the tree creator can delete their tree
      allow delete: if isOwner(resource.data.userId);
    }
  }
}
