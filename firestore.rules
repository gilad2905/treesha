rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Trees collection rules
    match /trees/{treeId} {
      // Anyone can read trees
      allow read: if true;

      // Only authenticated users can create trees
      // and they must set their own userId
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.keys().hasAll(['userId', 'name', 'fruitType', 'position', 'imageUrl', 'createdAt', 'upvotes', 'downvotes'])
                    && request.resource.data.upvotes is list
                    && request.resource.data.downvotes is list;

      // Allow updates for voting (upvotes/downvotes) by authenticated users
      // Prevent modification of core fields (userId, name, fruitType, position, createdAt)
      // Only allow changes to upvotes/downvotes arrays
      allow update: if isAuthenticated()
                    && request.resource.data.userId == resource.data.userId
                    && request.resource.data.name == resource.data.name
                    && request.resource.data.fruitType == resource.data.fruitType
                    && request.resource.data.position == resource.data.position
                    && request.resource.data.createdAt == resource.data.createdAt
                    && request.resource.data.imageUrl == resource.data.imageUrl;

      // Only the tree creator can delete their tree
      allow delete: if isOwner(resource.data.userId);

      // Posts subcollection rules
      match /posts/{postId} {
        // Anyone can read posts (even unauthenticated users)
        allow read: if true;

        // Only authenticated users can create posts
        // and they must set their own userId
        allow create: if isAuthenticated()
                      && request.resource.data.userId == request.auth.uid
                      && request.resource.data.keys().hasAll(['userId', 'userName', 'imageUrls', 'comment', 'createdAt'])
                      && request.resource.data.imageUrls is list;

        // Only post creator can update their own post
        allow update: if isOwner(resource.data.userId);

        // Only post creator can delete their own post
        allow delete: if isOwner(resource.data.userId);
      }
    }
  }
}
